layout {
    gaps 10
    center-focused-column "never"

    always-center-single-column
    // empty-workspace-above-first

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.75; }

    focus-ring {
        width 3

        active-color "#8caaee"
        inactive-color "#51576d"
    }

    border {
        width 3

        active-color "#8caaee"
        inactive-color "#51576d"
    }
}
